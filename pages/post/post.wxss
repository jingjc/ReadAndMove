/* pages/post/post.wxss */

swiper image {
  width: 100%;
  height: 100%;
}


.post-container{
    flex-direction:column;
    display:flex;
    margin-top:20rpx;
    margin-bottom:40rpx;
    margin-left: 0rpx;
    background-color:#fff;
    border-bottom: 1px solid #fff;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
    font-size: 30rpx;
}


.post_img_tittle {
  vertical-align: middle;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 30rpx;
}

.post-img {
  width: 60rpx;
  height: 60rpx;
  margin: 10px;
  vertical-align: middle;
}


.post_tittle{
  margin-left: 10rpx;
  width: 245px;
  overflow: hidden;
  white-space: nowrap;
  font-size: 30rpx;
  text-overflow: ellipsis;
}

.post-big-picture {
  width: 100%;
  height: 340rpx;
}

.post-collection_like{
  display: flex;
  flex-direction: row;
  vertical-align: middle;
  padding: 5rpx;
}

.post-like-img {
  width: 60rpx;
  height: 60rpx;
}

.post-like-text {
  width: 60rpx;
  height: 60rpx;
  margin-left: 5rpx;
  margin-top: 15rpx;
}

.post-collection {
  width: 60rpx;
  height: 60rpx;
}

.post-collection-text{
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.post_content{
  margin: 15rpx;
  font-size: 30rpx;
  color: #000000;
}
page{
   background-color:#F0EFF4;
   height: 100%;
}