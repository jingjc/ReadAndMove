/* pages/post/post_details.wxss */

.post_details_details_container {
  display: flex;
  flex-direction: column;
}

.post_details_details_pic {
  width: 100%;
  height: 460rpx;

}

.post_details_details_author {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.post_details_details_head_img {
  width: 60rpx;
  
  height: 60rpx;
  vertical-align: middle;
}

.post_details_details_name {
  white-space: nowrap;
  font-size: 30rpx;
  font-weight: 300;
  
  color: #000;
  vertical-align: middle;
}

.post_details_details_time {
  font-size: 24rpx;
  margin-left: 30rpx;
  margin-top: 5rpx;
  color: #000;
  vertical-align: middle;
}

.post_details_details_desc {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  color: #4b556c;
  letter-spacing: 2px;
}

.post_details_details_click_img {
  margin-top: 30rpx;
}

.post_details_details_circle_img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.post_details_details_circle_img Image {
  width: 90rpx;
  height: 90rpx;
}

.share_img{
  margin-left: 30rpx;
}
.share_line{
  width: 100%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: relative;
  z-index: -99;
  top: 49rpx;
}

.post_details_details_content{
  color: #666;
  line-height:44rpx;
  letter-spacing: 2px;
  margin: 30rpx;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  opacity: 0.8;
  top: 180rpx;
}            